    <groupId>com.liyuan</groupId>
    <artifactId>spring-cloud-register-center</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>spring-cloud-register-center</name>
    <description>Demo project for Spring Cloud Register Center</description>

    <dependencies>
        <!--注册中心只需要引入spring-boot-starter，无需web-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>

        <!--注册eureka-server服务发现组件 -->
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-netflix-eureka-server</artifactId>
        </dependency>

        <!--给Eureka Server加上安全的用户认证-->
